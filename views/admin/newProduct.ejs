<%- include('../header') %>

<div class="container">
  <h4 class="center-align blue-text text-darken-2">Add New Product</h4>

  <form action="/admin/products" method="POST">
    <div class="row">
      <div class="input-field col s12">
        <input type="text" id="name" name="name" class="validate" required />
        <label for="name">Product Name</label>
      </div>

      <div class="input-field col s12">
        <textarea
          id="description"
          name="description"
          class="materialize-textarea"
          required
        ></textarea>
        <label for="description">Product Description</label>
      </div>

      <div class="input-field col s12 m6">
        <input type="text" id="color" name="color" class="validate" required />
        <label for="color">Product Color</label>
      </div>

      <div class="input-field col s12 m6">
        <input
          type="number"
          id="price"
          name="price"
          class="validate"
          min="0"
          step="0.01"
          required
        />
        <label for="price">Product Price</label>
      </div>
      
     <div class="input-field col s12 m6">
        <input
          type="number"
          id="stock"
          name="stock"
          class="validate"
          min="0"
          step="0.01"
          required
        />
        <label for="stock">Product Stock</label>
      </div>

      <div class="input-field col s12 m6">
        <input type="text" id="image" name="image" class="validate" required />
        <label for="image">Product Image URL</label>
      </div>
       


      <div class="col s12 center-align">
        <button
          type="submit"
          class="btn waves-effect waves-light blue darken-2"
        >
          Add Product
        </button>
      </div>
    </div>
  </form>

  <div class="row">
    <div class="col s12 center-align">
      <a href="/admin/products" class="btn grey lighten-1 waves-effect"
        >Back to Product List</a
      >
    </div>
  </div>
</div>

<%- include('../footer') %>
